<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="logDir">${sys:LOG_DIR}</Property>
        <Property name="LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss}] [%t] [%highlight{%-5level}] %logger{36}.%M(%F:%L) - %msg%n</Property>
    </Properties>
    <Appenders>
        <Routing name="BeforeRoutingAppender">
            <Routes pattern="${ctx:beforeClassName}.${ctx:beforeMethodName}">
                <Route>
                    <RollingFile name="BeforeRollingFile"
                                 filePattern="${logDir}/req/${ctx:beforeClassName:-defaultClass}/${ctx:beforeMethodName:-defaultMethod}/%d{yyyy-MM-dd}-%i.log">
                        <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level [ip=%X{clientIp:-defaultIp}] [headers=%X{headers:-defaultHeaders}] [params=%X{params:-defaultParams}] - %msg%n"/>
                        <Policies>
                            <TimeBasedTriggeringPolicy interval="1"/>
                            <SizeBasedTriggeringPolicy size="100MB"/>
                        </Policies>
                        <DefaultRolloverStrategy fileIndex="min" max="7"/>
                    </RollingFile>
                </Route>
            </Routes>
        </Routing>
        <Routing name="AfterRoutingAppender">
            <Routes pattern="${ctx:afterClassName}.${ctx:afterMethodName}">
                <Route>
                    <RollingFile name="AfterRollingFile"
                                 filePattern="${logDir}/res/${ctx:afterClassName:-defaultClass}/${ctx:afterMethodName:-defaultMethod}/%d{yyyy-MM-dd}-%i.log">
                        <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level %logger{36} - %msg%n"/>
                        <Policies>
                            <TimeBasedTriggeringPolicy interval="1"/>
                            <SizeBasedTriggeringPolicy size="100MB"/>
                        </Policies>
                        <DefaultRolloverStrategy fileIndex="min" max="7"/>
                    </RollingFile>
                </Route>
            </Routes>
        </Routing>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="BeforeRoutingAppender"/>
            <AppenderRef ref="AfterRoutingAppender"/>
        </Root>
    </Loggers>
</Configuration>
